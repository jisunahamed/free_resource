generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum PricingType {
  FREE
  FREEMIUM
  PAID
  OPEN_SOURCE
}

enum DifficultyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookmarkedTools Tool[]
  bookmarkedPaths LearningPath[]
}

model Category {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  icon        String? // URL or icon name

  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")

  tools Tool[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tool {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String
  url         String
  pricing     PricingType
  features    Json? // Storing features as JSON array

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  guides Guide[] // Tools can be referenced in multiple guides

  bookmarkedBy User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([name])
  @@index([pricing])
}

model LearningPath {
  id          String          @id @default(cuid())
  title       String
  slug        String          @unique
  description String
  difficulty  DifficultyLevel

  guides Guide[]

  bookmarkedBy User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guide {
  id      String @id @default(cuid())
  title   String
  slug    String @unique
  content String
  order   Int // Order within the LearningPath

  learningPathId String
  learningPath   LearningPath @relation(fields: [learningPathId], references: [id])

  toolId String?
  tool   Tool?   @relation(fields: [toolId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
